<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuanlibaitapActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_QuayLai"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/img_muiten" />

        <TextView
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:text="Quản lí bài tập"
            android:textColor="#000"
            android:textSize="40dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEEEEE"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/CoNguc"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170dp"

                    android:padding="25dp"
                    android:text="Cơ Ngực"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="-50dp"
                    android:src="@drawable/conguc" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/CoTay"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170dp"

                    android:padding="25dp"
                    android:text="Cơ Tay"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="-50dp"
                    android:src="@drawable/removecotay" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/CoVai"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:background="@color/white">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="-50dp"
                    android:src="@drawable/covai">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170dp"

                    android:padding="25dp"
                    android:text="Cơ Vai"
                    android:textColor="@color/black"
                    android:textSize="30sp">

                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/CoBung"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170dp"

                    android:padding="25dp"
                    android:text="Cơ Bụng"
                    android:textColor="@color/black"
                    android:textSize="30sp">

                </TextView>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="-50dp"
                    android:src="@drawable/cobung">

                </ImageView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/CoLung"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170dp"

                    android:padding="25dp"
                    android:text="Cơ Lưng"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/removecolung" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/CoMong"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170dp"

                    android:padding="25dp"
                    android:text="Cơ Mông"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/comongremove" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/CoChan"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170dp"

                    android:padding="25dp"
                    android:text="Cơ Chân"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/cochanremove" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>

