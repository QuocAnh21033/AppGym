<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginTop="10dp"
        android:layout_weight="10">

        <TextView
            android:id="@+id/tvTenDT"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="9"
            android:hint="Tên động tác"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/img_Edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:background="@null"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/img_edit" />

        <ImageView
            android:id="@+id/img_Delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:background="@null"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/img_delete" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgHinhDT"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tvLam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="Các bước thực hiện:"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mtvBuoc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:width="120dp"
            android:text="Bước 1:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvBuoc1"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Bước 1"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mtvBuoc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:width="120dp"
            android:text="Bước 2:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvBuoc2"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Bước 2"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mtvBuoc3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:width="120dp"
            android:text="Bước 3:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvBuoc3"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Bước 3"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>